<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_category_name"
        android:text="金属"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_margin="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_open_door"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_open_door"
        android:gravity="center"
        android:textSize="30sp"
        android:text="开启管理员回收门"
        android:layout_margin="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_category_name"
        app:layout_constraintRight_toLeftOf="@id/btn_finish_recycle"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_finish_recycle"
        android:gravity="center"
        android:textSize="30sp"
        android:text="完成管理员回收"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_open_door"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>